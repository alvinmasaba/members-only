<h1 class="new-post-title">Say Something</h1>

<%= turbo_frame_tag id="new_post" do %>
  <%= form_with model: @post do |form| %>
    <div>
      <%= form.label :title %>
      <%= form.text_field :title %>
    </div>
    <div>
      <%= form.label :body %>
      <%= form.text_area :body %>
    </div>
    <%= form.submit %>
  <% end %>
<% end %>
